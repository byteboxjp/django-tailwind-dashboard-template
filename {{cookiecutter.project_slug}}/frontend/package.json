{
  "name": "{{ cookiecutter.project_slug }}",
  "version": "{{ cookiecutter.project_version }}",
  "description": "{{ cookiecutter.project_description }}",
  "scripts": {
    "build:css": "tailwindcss -i ../{{ cookiecutter.project_slug }}/static/css/input.css -o ../{{ cookiecutter.project_slug }}/static/css/styles.css",
    "build:min": "tailwindcss -i ../{{ cookiecutter.project_slug }}/static/css/input.css -o ../{{ cookiecutter.project_slug }}/static/css/styles.min.css --minify",
    "build": "npm run build:css && npm run build:min",
    "watch:css": "tailwindcss -i ../{{ cookiecutter.project_slug }}/static/css/input.css -o ../{{ cookiecutter.project_slug }}/static/css/styles.css --watch",
    "watch:min": "tailwindcss -i ../{{ cookiecutter.project_slug }}/static/css/input.css -o ../{{ cookiecutter.project_slug }}/static/css/styles.min.css --watch --minify",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:min\"",
    "clean": "rm -f ../{{ cookiecutter.project_slug }}/static/css/styles.css ../{{ cookiecutter.project_slug }}/static/css/styles.min.css"
  },
  "dependencies": {
    "flowbite": "^2.5.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/line-clamp": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "concurrently": "^8.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}